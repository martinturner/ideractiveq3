<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Customer Name</th>
      <th>Customer Code</th>
      <th>Order code</th>
      <th>Order date</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.customer.name %></td>
        <td><%= order.customer.customer_code %></td>
        <td><%= order.order_code %></td>
        <td><%= order.order_date %></td>
        <td><%= order.quantity %></td>
        <td><%= link_to 'Show', order, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_order_path(order), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path, class: "btn btn-success" %>
